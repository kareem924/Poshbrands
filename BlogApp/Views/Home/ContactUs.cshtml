</div>
<div class="blockPad lightGrey">
    <div class="container-fluid">
        <div class="blockHead row">
            <div id="ContentPlaceHolder_divFormSlogan" class="col-xs-9 centeredBlock greenSlogan">Or fill in the form below to help us assist you:</div>
            <div class="sloganSmall centered">* required fields</div>
        </div>
        <div class="col-md-8 col-xs-12 centeredBlock">
            @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row bigInnerSpace formFields">

                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input name="Name" placeholder="First Name *" type="text">

                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input name="LastName" id="ContentPlaceHolder_txtLastName" placeholder="Last Name *" type="text">
                    </div>

                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input name="Mobile" placeholder="Mobile *" type="text">
                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input name="Email" placeholder="Email *" type="text">
                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">
                        <input name="Subject" placeholder="Subject" type="text">
                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">
                        <span class="errorMessage" style="display: none;"></span>
                        <span id="ContentPlaceHolder_customValidatorContactPreference" validationtype="dropdown" errormessagetext="required" style="visibility: hidden;"></span>
                        <div class="selectMain">
                            <select style="width: 335px; position: absolute; opacity: 0; height: 46px; font-size: 16px;" class="hasCustomSelect rendered" name="ctl00$ContentPlaceHolder$ddlContactPreference" id="select1">
                                <option value="0">Contact Preference *</option>
                                <option value="Email">Email</option>
                                <option value="Mobile">Mobile</option>
                                <option value="Mobile and Email">Mobile and Email</option>

                            </select><span style="display: inline-block;" class="customSelect"><span style="width: 293px; display: inline-block;" class="customSelectInner" id="spanselect1">Contact Preference *</span></span>
                        </div>
                    </div>





                    <div class="col-xs-12 inputEntity">

                        <textarea name="Message" rows="2" cols="20" placeholder="Message *"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="centered formButtonsMain">
                            <button class="normalBtn" type="submit"><span>Submit.</span></button>
                            <button class="normalBtn" type="reset"><span>Clear.</span></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#select1').on('change', function () {

            var value = this.value;

            $('#spanselect1').text(value)
        });
    });
</script>