    </ul>
</div>
<!--  ABOUT-US-BANNAER-AREA START-->
<div class="mainHead" style="padding-top: 60px;">
    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-3 hiddenMobile">
                <div class="breadCrumbs"><a href="@Url.Action("index","home")">Home</a><span>/</span><a href="@Url.Action("home","jobs")">Careers</a><span>/</span><a href="#">vacancies.</a></div>
            </div>
            <div class="col-sm-6 col-xs-12 pageTitleHolder">
                <h3 class="blockTitle centered">vacancies.</h3>
            </div>

        </div>
    </div>
</div>

<div class="job-ap-bannaer-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="banner-area">


                </div>
            </div>
        </div>
    </div>
</div>

<div class="blockPad careersDetailsHolder">
    <div class="container-fluid">
        <div class="panel panel-@ViewBag.Status">
            <div class="panel-heading">
                @ViewBag.Message
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="vacancySpesHolder">
                    <div class="vacancyRefTitle">
                        @jobDetails.JobeName
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-sm-4 itemList">
                            <h6 class="blockSmallTitle">Job Title</h6>
                            <div class="normalText">
                                @jobDetails.JobeName
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 itemList">
                            <h6 class="blockSmallTitle">Location</h6>
                            <div class="normalText">
                                @jobDetails.Location
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 itemList">
                            <h6 class="blockSmallTitle">Department</h6>
                            <div class="normalText">
                                @jobDetails.Category
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <h6 class="blockSmallTitle">Role Purpose</h6>
                            <div class="normalText">
                                @jobDetails.RolePurpose
                            </div>
                        </div>
                    </div>
                </div>
                <div class="vacancyDescriptionHolder">
                    <div class="row bigInnerSpace">
                        <div class="col-md-7">
                            <div id="ContentPlaceHolder_divKeyAccountabilities" class="normalText">
                                <h6 class="blockSmallTitle">Key Accountabilities</h6>
                                <div class="normalText">
                                    @Html.Raw(@jobDetails.JobDescription)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="normalText">
                                <div id="ContentPlaceHolder_divQualificationsExperienceKnowledge" class="jobDetailsBloc">
                                    <h6 class="blockSmallTitle">Qualifications, Experience, Knowledge </h6>
                                    @Html.Raw(@jobDetails.JobQualifications)
                                </div>
                                <div id="ContentPlaceHolder_divCompetencies" class="jobDetailsBloc">
                                    <h6 class="blockSmallTitle">Competencies</h6>
                                    @Html.Raw(@jobDetails.JobResponsibilities)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="blockPad greyva">
    <div class="container-fluid">

        <div class="blockHead row">
            <div class="col-xs-9 centeredBlock greenSlogan">fill in the form below and send your CV:</div>
            <div class="sloganSmall centered">* required fields / *Upload Docs,PDF only </div>
        </div>

        <div class="col-md-8 col-xs-12 centeredBlock">

            @using (Html.BeginForm("CreateApplyJob", "Jobs", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.Hidden("JobId")
                <div class="row bigInnerSpace formFields">
                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input placeholder="First Name *" required="required" type="text" name="EmployeeName">

                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input placeholder="Mobile *" required="required" type="text" name="EmployeeMobile">
                    </div>

                    <div class="col-sm-6 col-xs-12 inputEntity">

                        <input placeholder="Email" type="email" name="EmployeeEmail">
                    </div>
                    <div class="col-sm-6 col-xs-12 inputEntity">


                        <input placeholder="Upload your cs *" required="required" type="file" name="EmployeeCv">
                    </div>
                    <div class="col-xs-12 inputEntity">


                        <textarea rows="2" cols="20" placeholder="Message *"></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="centered formButtonsMain">
                            <a href="@Url.Action("Index","Home")" onclick="" class="normalBtn"><span>cancel.</span></a>

                            <button class="normalBtn" type="submit"><span>Apply.</span></button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



















